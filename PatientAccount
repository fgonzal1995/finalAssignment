#include <string>

using namespace std;

PatientAccount::PatientAccount() // constructor defaults used in main
{
	name = "";
	idNumber = 0;
	charges = 0;
	numberDays = 1;
	dailyRate = 1;
}

PatientAccount::PatientAccount(string name, int idNumber, int dailyRate) {
	this->name = name; // told CT how to uncover not anything more about pointers
	this->idNumber = idNumber;
	this->charges = 0;
	this->numberDays = 1;
	this->dailyRate = dailyRate;
}
